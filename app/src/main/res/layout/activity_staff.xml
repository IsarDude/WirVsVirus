        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#000000" />

    </LinearLayout>
