<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundshopping"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/LinearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:text="Willkommen bei ShoppingTime"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/toLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:onClick="jumpToLogin"
            android:text="Login fÃ¼r Betreiber"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />


    </LinearLayout>

    <TextView
        android:id="@+id/AskForInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayoutTop"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="Bitte Postleitzahl eingeben:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/Layout_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AskForInput"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/plz"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="searchForStores"
            android:tint="#FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_search" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:layout_below="@+id/Layout_Input"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp" />


</RelativeLayout>